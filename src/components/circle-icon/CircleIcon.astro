---
export interface Props {
  icon: string;
  href: string;
  class?: string;
}

const { icon, href, class: className } = Astro.props;
---

<a href={href} target="_blank" class:list={["circle-icon", className]}>
  <img src={icon} alt="#" />
</a>

<style>
  .circle-icon {
    width: 42px;
    height: 42px;
    background-color: rgba(217, 217, 217, 0.1);
    display: inline-flex;
    border-radius: 50%;
    justify-content: center;
    align-items: center;
    border: 1px solid rgba(255, 255, 255, 0.5);
    position: relative;
    overflow: hidden;
  }

  .circle-icon img {
    transition: all 0.3s ease-in-out;
    width: 40%;
    z-index: 1;
  }

  .circle-icon::before {
    content: "";
    display: block;
    position: absolute;
    background-color: #fff;
    transform: scale(0);
    transition: all 0.3s ease-in-out;
    width: 100%;
    height: 100%;
    border-radius: 50%;
  }

  .circle-icon:hover::before {
    transform: scale(1);
  }

  .circle-icon:hover img {
    filter: brightness(0) saturate(100%) invert(0%) sepia(7%) saturate(98%)
      hue-rotate(346deg) brightness(95%) contrast(86%);
  }

  .circle-icon img {
    width: 40%;
    height: auto;
    vertical-align: middle;
  }
</style>
